@model Kommunikationsverktyg.Models.ViewModels.ProfileViewModel
@Html.ValidationSummary("", new { @class = "text-danger" })

<div id="editUser" class="modal fade" role="dialog" style="width: 40%; height: 90%; background-color: white; margin: auto; border-radius: 25px; padding: 10px; box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Ändra användaruppgifter</h4>
    </div>

    <div class="modal-body">
        @using (Html.BeginForm("EditUser", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="form-horizontal col-md-4 col-sm-4 col-md-offset-4 text-center">
                @Html.AntiForgeryToken()
                <div class="form-group">
                    @Html.LabelFor(m => m.RegisterViewModel.Firstname, new { @class = "control-label" })
                    @Html.EditorFor(m => m.RegisterViewModel.Firstname, new { @class = "form-control", placeholder = Model.RegisterViewModel.Firstname })
                    @Html.ValidationMessageFor(m => m.RegisterViewModel.Firstname, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.RegisterViewModel.Lastname, new { @class = "control-label" })
                    @Html.EditorFor(m => m.RegisterViewModel.Lastname, new { @class = "form-control", placeholder = Model.RegisterViewModel.Lastname })
                    @Html.ValidationMessageFor(m => m.RegisterViewModel.Lastname, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.RegisterViewModel.Title, new { @class = "control-label" })
                    @Html.EditorFor(m => m.RegisterViewModel.Title, new { @class = "form-control", placeholder = Model.RegisterViewModel.Title })
                    @Html.ValidationMessageFor(m => m.RegisterViewModel.Title, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.RegisterViewModel.Phone, new { @class = "control-label" })
                    @Html.EditorFor(m => m.RegisterViewModel.Phone, new { @class = "form-control", placeholder = Model.RegisterViewModel.Phone })
                    @Html.ValidationMessageFor(m => m.RegisterViewModel.Phone, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.RegisterViewModel.Description, new { @class = "control-label" })
                    @Html.TextAreaFor(m => m.RegisterViewModel.Description, new { @class = "form-control", placeholder = Model.RegisterViewModel.Description, rows = 10 })
                    @Html.ValidationMessageFor(m => m.RegisterViewModel.Description, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.RegisterViewModel.Password, new { @class = "control-label" })
                    @Html.PasswordFor(m => m.RegisterViewModel.Password, new { @class = "form-control", placeholder = "Nytt lösenord" })
                    @Html.ValidationMessageFor(m => m.RegisterViewModel.Password, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.RegisterViewModel.ConfirmPassword, new { @class = "control-label" })
                    @Html.PasswordFor(m => m.RegisterViewModel.ConfirmPassword, new { @class = "form-control", placeholder = "Upprepa lösenord" })
                    @Html.ValidationMessageFor(m => m.RegisterViewModel.ConfirmPassword, "", new { @class = "text-danger" })
                </div>
                
                @Html.HiddenFor(m => m.RegisterViewModel.Email)

                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Spara Ändringar" />
                    <button type="button" class="btn btn-default" data-dismiss="modal">Stäng</button>
                </div>
            </div>
        }
    </div>
</div>

<button id="testknappen">Redigera</button>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.18.1/moment.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.10.0/fullcalendar.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#testknappen').click(function () {
                $('#editUser').modal();
            });
        })
    </script>
}
