@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Error";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="error-template">
                <h1>
                    Oops!
                </h1>
                <h2>
                   Något har gått fel!!
                </h2>
                <div class="error-details">
                    Vi ber om ursäkt, någ har gått lite snett
                </div>
                <div class="error-actions">
                    <a href="~/Home" class="btn btn-primary btn-lg">
                        <span class="glyphicon glyphicon-home"></span>
                        Ta mig tillbaka
                    </a><a href="~/Home" class="btn btn-default btn-lg"><span class="glyphicon glyphicon-envelope"></span> Kontakta oss </a>
                </div>
            </div>
        </div>
    </div>
</div>

