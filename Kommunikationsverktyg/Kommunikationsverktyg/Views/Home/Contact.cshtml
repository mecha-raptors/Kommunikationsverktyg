@model Kommunikationsverktyg.Models.RegisterViewModel
@{
    ViewBag.Title = "Contact";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

@Html.ValidationSummary("", new { @class = "text-danger" })

<div id="editUser" class="modal fade" role="dialog" style="width: 40%; height: 90%; background-color: white; margin: auto; border-radius: 25px; padding: 10px; box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Ändra användaruppgifter</h4>
    </div>

    <div class="modal-body">
        @using (Html.BeginForm("EditUser", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="form-horizontal col-md-4 col-sm-4 col-md-offset-4 text-center">
                @Html.AntiForgeryToken()
                <div class="form-group">
                    @Html.LabelFor(m => m.Firstname, new { @class = "control-label" })
                    @Html.EditorFor(m => m.Firstname, new { @class = "form-control", placeholder = Model.Firstname })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Lastname, new { @class = "control-label" })
                    @Html.EditorFor(m => m.Lastname, new { @class = "form-control", placeholder = Model.Lastname })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Phone, new { @class = "control-label" })
                    @Html.EditorFor(m => m.Phone, new { @class = "form-control", placeholder = Model.Phone })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Description, new { @class = "control-label" })
                    @Html.TextAreaFor(m => m.Description, new { @class = "form-control", placeholder = Model.Description, rows = 10 })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Nytt lösenord" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Upprepa lösenord" })
                </div>

                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Spara Ändringar" />
                    <button type="button" class="btn btn-default" data-dismiss="modal">Stäng</button>
                </div>
            </div>
        }
    </div>
</div>

<button id="testknappen">Hejsan</button>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.18.1/moment.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.10.0/fullcalendar.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#testknappen').click(function () {
                $('#editUser').modal();
            });
        })
    </script>
}